####

ETH_account_EUR = client.get_account('ETH')
#convert to dict. 
ETH_accountdict = json.loads(json.dumps(ETH_account_EUR))

#using dict to get the current BTC balance
ETH_balance_EUR = ETH_accountdict['native_balance']['amount']
