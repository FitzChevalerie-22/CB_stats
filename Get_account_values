#client = Client(coinbase_API_key, coinbase_API_secret)
import json
from coinbase.wallet.client import Client
cb_api_key = ""
cb_api_secret = ""
client = Client(cb_api_key, cb_api_secret)

#### BTC ####

BTCaccount = client.get_account('BTC')
#convert to dict. 
BTCaccountdict = json.loads(json.dumps(BTCaccount))

#using dict to get the current BTC balance
BTCbalance = BTCaccountdict['balance']['amount']
print ("Solde BTC actuel", BTCbalance, )

####

BTCaccount_EUR = client.get_account('BTC')
#convert to dict. 
BTCaccountdict = json.loads(json.dumps(BTCaccount_EUR))

#using dict to get the current BTC balance
BTCbalance_EUR = BTCaccountdict['native_balance']['amount']
print ("Solde BTC actuel", BTCbalance_EUR, "EUR")

#### ETH ####

ETH_account = client.get_account('ETH')
#convert to dict. 
ETH_accountdict = json.loads(json.dumps(ETH_account))

